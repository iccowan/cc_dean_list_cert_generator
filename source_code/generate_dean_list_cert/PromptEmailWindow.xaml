<Window x:Class="generate_dean_list_cert.PromptEmailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:generate_dean_list_cert"
        mc:Ignorable="d"
        Title="Generate Dean's List Certificates Email Message" Height="400" Width="400">
    <Grid>
        <TextBlock TextWrapping="Wrap" VerticalAlignment="Top" Text="If you would like for a message to be included with the email, put that here and close the window. If you would like for there to be no message, just close this window." Height="54" Margin="10,10,10,0"/>
        <TextBox x:Name="EmailMessage" TextWrapping="Wrap" Margin="10,69,10,35" Foreground="#FFD1DAE5" Text="Begin typing your message here..." GotFocus="EmailMessage_GotFocus" LostFocus="EmailMessage_LostFocus"/>
        <Button x:Name="ClosePromptEmail" Content="Close" Margin="0,0,10,10" Click="ClosePromptEmail_Click" HorizontalAlignment="Right" Width="75" Height="20" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
